<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <data>
        <!--Email template -->
        <record id="appointment_approval_email_template" model="mail.template">
            <field name="name">Appointment Approval: Send by email</field>
            <field name="model_id" ref="hospital_appointments.model_hospital_appointment"/>
            <field name="email_from">{{ object.user_id.email }}</field>
            <field name="email_to">{{ object.email }}</field>
            <field name="subject">Appointment Approved (Ref {{ object.appointment_seq }}) </field>
            <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px;">
                <p style="margin: 0px; padding: 0px; font-size: 13px;">
                    <t t-out="object.patient_name"></t>
                    <br /><br />
                    Here is your approval of your appointment with reference
                    <t t-out="object.appointment_seq"></t>
                    is scheduled on <t t-out="object.time"></t><t t-out="object.pm"></t>
                    <br /><br />
                    Date:<t t-out="object.appointment_date"></t>
                    <br /><br />
                    Do not hesitate to contact us if you have any questions.
                </p>
            </div>
            </field>
            <field name="report_template" ref="print_patient_card"/>
            <field name="report_name">Appointment Approval _{{ object.appointment_seq }}</field>
        </record>
    </data>

</odoo>